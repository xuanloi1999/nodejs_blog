<div class="mt-4">
    <div class="row">
        {{#each courses}}
        <div class="col-sm-6 col-lg-4"></div>
            <div class="card card-course-item">
                <img class="card-img-top" src="{{this.thumbnail}}" alt="{{this.name}}">
                <div class="card-body">
                    <h5 class="card-title">{{this.name}}</h5>
                    <p class="card-text">{{this.description}}</p>
                </div>
            </div>
        {{/each}}    
    </div>

</div>
